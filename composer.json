{
    "name": "supermetrics/php-assignment",
    "type": "project",
    "authors": [
        {
            "name": "Supermetrics Developers",
            "email": "careers@supermetrics.com"
        }
    ],
    "minimum-stability": "stable",
    "require": {
        "php": "^8.0",
        "ext-memcached": "*",
        "guzzlehttp/guzzle": "7.4.0",
        "vlucas/phpdotenv": "5.4.0",
        "phpunit/php-timer": "5.0.3",
        "psr/simple-cache": "3.0.0",
        "symfony/dependency-injection": "^6.2",
        "symfony/config": "^6.2",
        "symfony/yaml": "^6.2",
        "symfony/finder": "^6.2",
        "laminas/laminas-httphandlerrunner": "^2.4"
    },
    "require-dev": {
        "phpunit/phpunit": "9.5.10"
    },
    "autoload": {
        "psr-4": {
            "App\\": "module/App/src",
            "Statistics\\": "module/Statistics/src",
            "SocialPost\\": "module/SocialPost/src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\App\\": "module/App/tests",
            "Tests\\Statistics\\": "module/Statistics/tests",
            "Tests\\SocialPost\\": "module/SocialPost/tests"
        }
    },
    "scripts": {
        "serve": [
            "docker-compose build --force-rm && docker-compose up"
        ]
    }
}
